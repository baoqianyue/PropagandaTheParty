<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/testcontent"
              android:orientation="vertical"
              android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"/>


    <TextView
        android:id="@+id/tv_test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.07"
        android:gravity="center"
        android:textSize="30sp"/>


    <RadioGroup
        android:id="@+id/rg_test_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RadioButton
            android:id="@+id/rb_test_a"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_margin="16dp"
            android:background="@drawable/testitembg"
            android:textSize="22sp"/>


        <RadioButton
            android:id="@+id/rb_test_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/testitembg"
            android:textSize="22sp"/>

        <RadioButton
            android:id="@+id/rb_test_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/testitembg"
            android:textSize="22sp"/>

        <RadioButton
            android:id="@+id/rb_test_d"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_margin="16dp"
            android:background="@drawable/testitembg"
            android:textSize="22sp"/>
    </RadioGroup>

</LinearLayout>